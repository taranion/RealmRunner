<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%5p [%15c] (%F:%L) - %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="DEBUG">
			<AppenderRef ref="Console" />
		</Root>
    	<Logger name="sun" level="ERROR"/>
    	<Logger name="com.sun" level="INFO"/>
    	<Logger name="xml" level="WARN"/>
    	<Logger name="jdk" level="warn"/>
    	<Logger name="java" level="INFO"/>
    	<Logger name="javafx" level="INFO"/>
    	<Logger name="telnet" level="INFO"/>
    	<Logger name="telnet.lvl1.out" level="WARN"/>
     	<Logger name="org.prelle.ansi" level="INFO"/>
        <Logger name="mud.map" level="INFO"/>
    	<Logger name="mud.network" level="INFO"/>
        <Logger name="mud.splittermond" level="INFO"/>
    	<Logger name="mud.symbol" level="INFO"/>
    	<Logger name="mud.world" level="INFO"/>
    	<Logger name="de.rpgframework" level="INFO"/>
    	<Logger name="de.rpgframework.genericrpg" level="ERROR"/>
    	<Logger name="org.prelle.splimo" level="WARN"/>
    	<Logger name="org.prelle.splittermond" level="WARN"/>
        <Logger name="org.prelle.mud.ecs" level="INFO"/>
        <Logger name="org.prelle.mud.action" level="DEBUG"/>
        <Logger name="org.prelle.mud.action.cooked" level="DEBUG"/>
    	<Logger name="org.prelle.mud.commands" level="DEBUG"/>
        <Logger name="splittermond" level="INFO"/>
	</Loggers>
</Configuration>
